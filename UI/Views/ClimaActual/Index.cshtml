@model UI.Models.CurrentConditionsModel

@{
    ViewData["Title"] = "Condiciones Actuales";
}

<h1>Clima actual en @ViewBag.Ciudad</h1>

<div>
    <hr />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-center"><h5>Fecha de información: @Model.LocalObservationDateTime</h5></div>
            <br />
            <div class="col-sm-4 border-dark bg-light">
                <h6>@Html.DisplayNameFor(model => model.WeatherText)</h6>
                @Model.WeatherText
            </div>
            <div class="col-sm-4 border-dark bg-light">
                <h6>@Html.DisplayNameFor(model => model.Temperature)</h6>
                @Model.Temperature.Metric.Value @Model.Temperature.Metric.Unit
            </div>
            <div class="col-sm-4 border-dark bg-light">
                <h6>@Html.DisplayNameFor(model => model.RealFeelTemperature)</h6>
                @Model.RealFeelTemperature.Metric.Value @Model.RealFeelTemperature.Metric.Unit
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center"><h5>Precipitación: </h5></div>
            <br />
            <div class="col-sm-3 border-dark bg-light">
                <h6>@Html.DisplayNameFor(model => model.HasPrecipitation)</h6>
                @if (Model.HasPrecipitation == true)
                {
                    <p>Sí</p>
                    @Model.PrecipitationType
                }
                else
                {
                    <p>No</p>
                }
            </div>
            <div class="col-sm-3 border-dark bg-light">
                <h6>@Html.DisplayNameFor(model => model.PrecipitationSummary.PastHour)</h6>
                @Model.PrecipitationSummary.PastHour.Value @Model.PrecipitationSummary.PastHour.Unit
            </div>
            <div class="col-sm-3 border-dark bg-light">
                <h6>@Html.DisplayNameFor(model => model.PrecipitationSummary.Past12Hours)</h6>
                @Model.PrecipitationSummary.Past12Hours.Value @Model.PrecipitationSummary.Past12Hours.Unit
            </div>
            <div class="col-sm-3 border-dark bg-light">
                <h6>@Html.DisplayNameFor(model => model.PrecipitationSummary.Past24Hours)</h6>
                @Model.PrecipitationSummary.Past24Hours.Value @Model.PrecipitationSummary.Past24Hours.Unit
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center"><h5>Otros datos:</h5></div>
            <br />
            <div class="col-sm-3 border-dark bg-light">
                <h6>@Html.DisplayNameFor(model => model.Wind)</h6>
                Dirección: @Model.Wind.Direction.English
                Velocidad: @Model.Wind.Speed
            </div>
            <div class="col-sm-6 border-dark bg-light">
                <h6>@Html.DisplayNameFor(model => model.Pressure)</h6>
                @Model.Pressure.Metric.Value @Model.Pressure.Metric.Unit
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Buscar Nuevo", "Index", "Home")
</div>
